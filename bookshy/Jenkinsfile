pipeline {
    agent {
        docker {
            image 'node:22-alpine'
            args '-v /var/jenkins_home/workspace:/workspace'
        }
    }

    stages {
        stage ('Checkout') {
            steps {
               checkout scm
               sh 'ls -la'
               sh 'ls -la bookshy'
            }
        }
         
        stage('Install Dependencies') {
            steps {
                dir('bookshy') {
                    sh 'npm --version'
                    sh 'node --version'
                    sh 'ls -la'
                    sh 'npm install'
                }
            }
        }

        stage('Lint') {
            steps {
                dir('bookshy') {
                    sh 'npm run lint || true'
                }
            }
        }

        stage('Type Check') {
            steps {
                dir('bookshy') {
                    sh 'npx tsc --noEmit'
                }
            }
        }

        stage ('Build') {
            steps {
                dir('bookshy') {
                    sh 'npm run build'
                }
            }
        }

        stage('Archive Build') {
            steps {
                dir('bookshy') {
                    archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
                }
            }
        }

        stage('Deploy to Production') {
            when {
                branch 'front'
            }
            steps {
                dir('bookshy') {
                    sh 'echo "Deploying to production environment"'
                    // 실제 배포 스크립트를 여기에 추가
                    // 예: sh 'rsync -avz --delete dist/ user@production-server:/path/to/nginx/html/'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
